{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "target": "ES6",
    "lib": ["es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "incremental": true,
    "paths": {
      "@assets": ["./src/assets"],
      "@constants": ["./src/constants"],
      "@components": ["./src/components"],
      "@screens": ["./src/screens"],
      "@utils": ["./src/utils"],
      "@types": ["./src/types"],
      "@services": ["./src/services"],
      "@navigation": ["./src/navigation"],
      "@hooks": ["./src/hooks"],
      "@store": ["./src/store"],
      "@config": ["./src/config"]
    }
  },
  "allowSyntheticDefaultImports": true,
  "include": ["src", "./types.d.ts", "assets"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
